{% extends "layouts/base.njk" %}

{% block contentMain %}

  <article id="contents-list" class="container">
    <div class="colums">
      <section class="column is-9">
        <div class="content">
          <h2>Main Contents...</h2>
          <hr />
          <ol>
{% for item in collections.all | eleventyNavigation %}
  {% if item.url !== '/' and item.url !== '/404.html' %}
            <li><a href="{{ item.url }}">{{ item.title }}</a></li>
  {% endif %}
{% endfor %}
          </ol>
        </div>
      </section>
    </div>
  </article>

  <article id="introduction" class="container">
    <div class="colums">
      <section class="column is-9">
        <div class="content">
{{ content | safe }}
        </div>
      </section>
    </div>
  </article>

  <article id="history" class="container">
{% for item in collections.homeSections %}
  {% set tmp = loop.index % 4 %}
  {% set offset = 0 %}
  {% if tmp == 0 %}{% set offset = 1 %}
  {% elif tmp == 1 %}{% set offset = 2 %}
  {% elif tmp == 2 %}{% set offset = 1 %}
  {% else %}{% set offset = 0 %}
  {% endif %}
    <div class="colums">
      <section class="column is-10 is-offset-{{offset}}">
        <div class="content">
          <h3>{{ item.data.title | safe }}</h3>
          <hr />
          <p class="description">{{ item.data.description | safe }}</p>
{{ item.templateContent | safe }}
        </div>
      </section>
    </div>
{% endfor %}
  </article>

{% endblock %}
